<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/actionsheet_bg_shap"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/color_front_normal"
        android:textSize="14dp"
        android:textStyle="bold" />
    <View
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line" />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/color_front_normal"
        android:textSize="14dp" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:id="@+id/ll_two_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/actionsheet_bottom_shap"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/actionsheet_bottom_left_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@drawable/actionsheet_front_cancle_select"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="1px"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@color/color_line"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/tv_affirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="@drawable/actionsheet_bottom_right_selector"
            android:gravity="center"
            android:text="@string/affirm"
            android:textColor="@drawable/actionsheet_front_main_select"
            android:textSize="14dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_one_affirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/actionsheet_bottom_selector"
        android:gravity="center"
        android:text="@string/affirm"
        android:textColor="@drawable/actionsheet_front_main_select"
        android:textSize="14dp"
        android:visibility="gone" />

</LinearLayout>